	mesh = {Contrast Sensitivity; Form Perception; Humans; Perceptual Masking},
	month = {Dec},
	number = {12},
	pages = {1136-69},
	pmid = {15669917},
	pst = {epublish},
	title = {Crowding is unlike ordinary masking: distinguishing feature integration from detection},
	volume = {4},
